<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Параметры текста"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/alignment_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_format_group"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/align_left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/left_alignment"
                android:background="@drawable/bg_button_selector"
                android:contentDescription="Align Left" />

            <ImageButton
                android:id="@+id/align_center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@drawable/center_alignment"
                android:background="@drawable/bg_button_selector"
                android:contentDescription="Align Center" />

            <ImageButton
                android:id="@+id/align_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@drawable/right_alignment"
                android:background="@drawable/bg_button_selector"
                android:contentDescription="Align Right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/style_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_format_group"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bold_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@drawable/text_bold"
                android:background="@drawable/bg_button_selector"
                android:contentDescription="Bold" />

            <ImageButton
                android:id="@+id/italic_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@drawable/text_italic"
                android:background="@drawable/bg_button_selector"
                android:contentDescription="Italic" />

            <ImageButton
                android:id="@+id/underline_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@drawable/text_underline"
                android:background="@drawable/bg_button_selector"
                android:contentDescription="Underline" />

            <ImageButton
                android:id="@+id/strike_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@drawable/text_strike"
                android:background="@drawable/bg_button_selector"
                android:contentDescription="Strikethrough" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_format_group"
        android:padding="8dp"
        android:layout_margin="4dp"
        android:gravity="center">

        <ImageButton android:id="@+id/color_red" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_red"/>
        <ImageButton android:id="@+id/color_orange" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_orange"/>
        <ImageButton android:id="@+id/color_yellow" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_yellow"/>
        <ImageButton android:id="@+id/color_green" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_green"/>
        <ImageButton android:id="@+id/color_light_blue" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_light_blue"/>
        <ImageButton android:id="@+id/color_blue" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_blue"/>
        <ImageButton android:id="@+id/color_purple" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_purple"/>
        <ImageButton android:id="@+id/color_black" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2dp" android:background="@drawable/color_black"/>
    </LinearLayout>

</merge>
